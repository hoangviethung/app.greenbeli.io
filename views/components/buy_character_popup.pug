#buy_character_popup.buy_character_popup(style="display:none")
    .popup_wrapper
        .popup__header
            h2.popup__title Buy Hero
        .popup__body
            .buy_character_content_popup
                .content
                    ul
                        li Price: 6,000 GRBE
                        li Fee: 300 GRBE
                        li Total: 6,300 GRBE
                    p Are you sure to buy this Green Hero with 
                        b 6,300 GRBE?
                .error
                    i.fad.fa-exclamation-circle
                    p No enough balance GRBE
        .popup__footer
            button(data-fancybox-close).bt.bt--primary.bt--outline Close
            button.bt.bt--primary(popup-to="buy_character_success_popup" href="javascript:;") Buy
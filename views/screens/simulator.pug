                                            td
                                                input(type="number" value="1")
                            .left
                                .stats
                                    .stat__item
                                        label Intel
                                        .content
                                            .icon
                                                img(src="./icons/intel.png")
                                            .value
                                                input(type="number" value="48" readonly) 
                                    .stat__item
                                        label Base Dmg
                                        .content
                                            .icon
                                                img(src="./icons/dmg.png")
                                            .value
                                                input(type="number" value="50" readonly) 
                                    .stat__item
                                        label Crit Dmg
                                        .content
                                            .icon
                                                img(src="./icons/crit-dmg.png")

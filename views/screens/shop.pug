extends ../layouts/layout

block var
    - pageTitle = "Liquidity | Green Beli"
    - pageName = "nft_market_page"
block library-css
block css
    link(rel="stylesheet", href="./css/banner.css")
    link(rel="stylesheet", href="./css/shop.css")
block library-js
block js
    script(src="./js/shop.js") 
block main
    // *** BANNER *** //
    include ../components/banner_shop
    // *** SHOP *** //
    section.shop_section
        .container
            .shop__wrapper
                aside.shop__fiter_left
                    .title Filter
                    .shop__filter_tabs_content
                        .filter_block
                            h4.filter_block__title Sort By
                            .select__custom
                                select
                                    option Lowest Price
                                    option Highest Price
                                    option Lowest Productivity Price
                                    option Highest Productivity Price
                        .filter_block
                            h4.filter_block__title Class
                            .filter_block__wrapper
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/metal.png", alt="Metal")
                                    span Metal
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/wood.png", alt="Wood")
                                    span Wood
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/water.png", alt="Water")
                                    span Water
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/fire.png", alt="Fire")
                                    span Fire
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/earth.png", alt="Earth")
                                    span Earth
                        .filter_block
                            h4.filter_block__title Body Part
                            .filter_block__wrapper
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/face.png", alt="Face")
                                    span Face
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/hair.png", alt="Hair")
                                    span Hair
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/body.png", alt="Body")
                                    span Body
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/hand.png", alt="Hand")
                                    span Hand
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/leg.png", alt="Leg")
                                    span Leg
                                .filter_block__item
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                    img(src="./icons/deco.png", alt="Deco")
                                    span Deco
                        .filter_block
                            h4.filter_block__title Star
                            .filter_block__item
                                .input-range-stars
                                    .input-range
                                        input(type="range" min="1" max="6" value="1" style="width:100%")
                                    .stars
                                        p 1
                                        p 2
                                        p 3
                                        p 4
                                        p 5
                                        p 6
                .shop__main_content
                    .shop__filter_top
                        .left_partial
                            .partial__item
                                span Total Green Hero: 1106 Items
                        .right_partial
                            .input_group
                                span Owned
                                label.checkbox__switch
                                    input(type='checkbox')
                                    .slider.round
                    .list_products
                        -for(i=0;i<5;i++)
                            a.list_products__item_wrapper(popup-to="character_detail_popup" href="javascript:;")
                                .list_products__item
                                    .item_wrapper__top
                                        .character__image
                                            img(src="./images/itemproductmetal.png", alt="CHARACTER-METAL")
                                        .character__name
                                            h3 GRBE#95203
                                        .character__rating
                                            i.fas.fa-star
                                            i.fas.fa-star
                                            i.fas.fa-star
                                            i.fas.fa-star
                                            i.fas.fa-star
                                    .item_wrapper__bottom
                                        .character__information
                                            .information__item
                                                span Class
                                                span Metal
                                            .information__item
                                                span Genes
                                                span 10%
                                            .information__item
                                                span Status
                                                span Farming
                                    .item_wrapper__action
                                        button.bt.bt--block.bt--primary Buy Hero
    // *** CHARACTER DETAIL POPUP *** //
    include ../components/character_detail_popup
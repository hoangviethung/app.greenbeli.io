extends ../layouts/layout

block var
    - pageTitle = "Shop | Green Beli"
    - pageName = "nft_market_page"
block library-css
block css
    link(rel="stylesheet", href="./css/banner.css")
    link(rel="stylesheet", href="./css/shop.css")
block library-js
block js
    script(src="./js/shop.js") 
block main
    // *** BANNER *** //
    include ../components/banner_shop
    // *** SHOP *** //
    section.shop_section
        .container
            .shop__wrapper
                .button-mobile
                    button.bt.bt--primary.bt-open-filter-mobile Filter
                .shop__filter
                    .close-filter-mobile
                        .bt-close-filter-mobile
                            i.fal.fa-times
                    .filter__top
                        .left
                            h3 Filter (2)
                        .right
                            a.bt.bt--secondary(href="#") Clear Filter
                    .filter__items
                        .filter_block
                            h4 Class
                            .filter_block_checkbox
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        .icon
                                            img(src="./icons/hero-class/fire.png", alt="")
                                        span Fire
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        .icon
                                            img(src="./icons/hero-class/water.png", alt="")
                                        span Water
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        .icon
                                            img(src="./icons/hero-class/metal.png", alt="")
                                        span Metal
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        .icon
                                            img(src="./icons/hero-class/earth.png", alt="")
                                        span Earth
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        .icon
                                            img(src="./icons/hero-class/wood.png", alt="")
                                        span Wood
                        .filter_block
                            h4 Rarity
                            .filter_block_checkbox
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        span(rarity="common") Common
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        span(rarity="uncommon") Uncommon
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        span(rarity="rare") Rare
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        span(rarity="epic") Epic 
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        span(rarity="legendary") Legendary
                                .input_group.input_group_checkbox
                                    label
                                        .checkbox__custom
                                            input(type="checkbox")
                                        span(rarity="mythical") Mythical
                        .filter_block
                            h4 Level
                .shop__main_content
                    .shop__main_top
                        .left
                            .total-green-hero 1000 Green Heroes
                        .right
                            .sort_block
                                .select__custom
                                    select
                                        option Lowest Price
                                        option Highest Price
                                        option Lastest
                            .input_group
                                span Owned
                                label.checkbox__switch
                                    input(type='checkbox')
                                    .slider.round
                    .list_products
                        .list_products__item_wrapper
                            a.list_products__item(popup-to="character_detail_popup_unsell" href="javascript:;" rating="5" character-class="fire")
                                .item_wrapper__top
                                    .character__image
                                        .image
                                            img(src="./images/itemproductfire.png", alt="CHARACTER-FIRE")
                                .item_wrapper__bottom
                                    .character__information
                                        .information__item
                                            .character__name
                                                h3 GRBE#95203
                                            .character__rating
                                                i.fas.fa-star
                                        .character__price
                                            .price__wrapper
                                                .icon
                                                    img(src="./icons/grbe.png", alt="GRBE")
                                                .price
                                                    span 0.4723
                                            p.price-usd ($21.92)
                                    .character__status.txt-orange Selling
                        .list_products__item_wrapper

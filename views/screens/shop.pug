extends ../layouts/layout

block var
    - pageTitle = "Liquidity | Green Beli"
    - pageName = "nft_market_page"
block library-css
block css
    link(rel="stylesheet", href="./css/banner.css")
    link(rel="stylesheet", href="./css/shop.css")
block library-js
block js
    script(src="./js/shop.js") 
block main
    // *** BANNER *** //
    include ../components/banner_shop
    // *** SHOP *** //
    section.shop_section
        .container
            .shop__wrapper
                .shop__filter
                    .filter__top
                        .left_partial
                            .partial__item
                                span Total Green Hero: 1106 Items
                        .right_partial
                            .input_group
                                span Owned
                                label.checkbox__switch
                                    input(type='checkbox')
                                    .slider.round
                    .filter__main
                        .filter_block
                            label.filter_block__label Sort By
                            .select__custom
                                select
                                    option Lowest Price
                                    option Highest Price
                                    option Lowest Productivity Price
                                    option Highest Productivity Price
                        .filter_block
                            label.filter_block__label Class
                            .select__custom
                                select
                                    option Metal
                                    option Wood
                                    option Water
                                    option Fire
                                    option Earth
                        .filter_block
                            label.filter_block__label Body Part
                            .select__custom
                                select
                                    option Face
                                    option Hair
                                    option Body
                                    option Hand
                                    option Leg
                                    option Deco
                        .filter_block
                            label.filter_block__label Star
                            .select__custom
                                select
                                    option 1 Star
                                    option 2 Star
                                    option 3 Star
                                    option 4 Star
                                    option 5 Star
                                    option 6 Star
                .shop__main_content
                    .list_products
                        -for(i=0;i<10;i++)
                            a.list_products__item_wrapper(popup-to="character_detail_popup" href="javascript:;")
                                .list_products__item
                                    .item_wrapper__top
                                        .character__image
                                            img(src="./images/itemproductmetal.png", alt="CHARACTER-METAL")
                                        .character__name
                                            h3 GRBE#95203
                                        .character__rating
                                            i.fas.fa-star
                                            i.fas.fa-star
                                            i.fas.fa-star
                                            i.fas.fa-star
                                            i.fas.fa-star
                                    .item_wrapper__bottom
                                        .character__information
                                            .information__item
                                                span Class
                                                span Metal
                                            .information__item
                                                span Genes
                                                span 10%
                                            .information__item
                                                span Status
                                                span Farming
                                    .item_wrapper__action
                                        button.bt.bt--block.bt--primary Buy Hero
                    .shop__pagination
                        ul.pagination
                            li.pagination-item.disable
                                a(href="#")
                                    i.fal.fa-chevron-left
                            li.pagination-item.active
                                a(href="#") 1
                            li.pagination-item
                                a(href="#") 2
                            li.pagination-item
                                a(href="#") 3
                            li.pagination-item
                                a(href="#") 4
                            li.pagination-item
                                a(href="#") 5
                            li.pagination-item
                                a(href="#")
                                    i.far.fa-ellipsis-h
                            li.pagination-item
                                a(href="#") 1424
                            li.pagination-item
                                a(href="#")
                                    i.fal.fa-chevron-right
    // *** CHARACTER DETAIL POPUP *** //
    include ../components/character_detail_popup
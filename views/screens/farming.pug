                                                                        p 75%
                                                                        p 100%
                                .expand_details__item
                                    .item__stake_grbe
                                        label Green Hero
                                        p.description Stake Green Hero to boots your farm
                                        .select_rgbe
                                            .thumbnail(popup-to="stake_your_rgbe_popup" href="javascript:;")
                                                img(src="./images/itemproductfire.png", alt="")
                                                p Click to Stake
                                    .item__earned
                                        label GRBE Earned
                                        p.amount
                                            span 0.000
                                            span.usd-value ~$0.00
                                        .grbe-icon
                                            img(src="./icons/grbe.png", alt="GRBE")
                                        .actions
                                            button.bt.bt--primary(disable) Harvest
    // *** STAKE YOUR RGBE POPUP *** //
    include ../components/stake_your_rgbe_popup
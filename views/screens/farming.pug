                                                    .tabs_tabpane(toggle-id="unstake")
                                                        .content_wrapper
                                                            .form_wrapper
                                                                .block-input-action
                                                                    .input_group
                                                                        input.form-control(value="1000" type="number" placeholder="Amount")
                                                                        span GRBE
                                                                    .actions
                                                                        button.bt.bt--orange.bt--outline.bt--block Withdraw
                                                                .input-range-percent

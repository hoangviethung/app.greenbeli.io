                                        p.description Stake Green Hero to boots your farm
                                        .select_rgbe
                                            .thumbnail(popup-to="stake_your_rgbe_popup" href="javascript:;")
                                                img(src="./images/itemproductfire.png", alt="")
                                                p Click to Stake
                                    .item__earned
                                        label GRBE Earned
                                        p.amount
                                            span 0.000
                                            span.usd-value ~$0.00
                                        .grbe-icon
                                            img(src="./icons/grbe.png", alt="GRBE")
                                        .actions
                                            button.bt.bt--primary(disable) Harvest
                .farming__item
                    .collapse_header
                        .panel__header
                            .panel_header__content--top
                                .content--top__infomation
                                    .infomation__logos
                                        span.logo--left.staked-only
                                            img(src="./icons/grbe.png", alt="RGBE")
                                    .infomation__content

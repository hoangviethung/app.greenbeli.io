extends ../layouts/layout

block var
    - pageTitle = "Your Tree | Green Beli"
    - pageName = "nft_your_tree_page"
block library-css
block css
    link(rel="stylesheet", href="./css/banner.css")
    link(rel="stylesheet", href="./css/your-tree.css")
block library-js
block js
    script(src="./js/your-tree.js")
block main
    // *** BANNER *** //
    include ../components/banner_your_tree
    // *** YOUR RGBE *** //
    section.your_tree_section
        .container
            .your_tree__filter_top
                .left_partial
                    .total_rgbe
                        span 1106 Items
                .right_partial
                    .select__custom
                        select
                            option All status
                            option Free
                            option Farming
                            option Selling
            .list_products
                a.list_products__item_wrapper(popup-to="character_detail_popup" href="javascript:;")
                    .list_products__item.list_products__item--metal
                        .passive
                            span
                                img(src="./icons/metal.png", alt="Metal")
                        .power
                            i.fas.fa-fist-raised
                            span.value 4%
                        .list_products__thumbnail
                            .lazyload-wrapper
                                img(src="./images/itemproductmetal.png", alt="CHARACTER-METAL")
                        .list_products__info
                            .name GRBE#95203
                            .detail
                                .code ID: 433...203
                                .rating
                                    i.fas.fa-star
                            .detail
                                .status Farming

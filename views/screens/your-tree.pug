extends ../layouts/layout

block var
    - pageTitle = "Your Tree | Green Beli"
    - pageName = "nft_your_tree_page"
block library-css
block css
    link(rel="stylesheet", href="./css/banner.css")
    link(rel="stylesheet", href="./css/your-tree.css")
block library-js
block js
    script(src="./js/your-tree.js")
block main
    // *** BANNER *** //
    include ../components/banner_your_tree
    // *** YOUR RGBE *** //
    section.your_tree_section
        .container
            .your_tree__filter_top
                .left_partial
                    .total_rgbe
                        span 1106 Items
                .right_partial
                    .select__custom
                        select
                            option All status
                            option Free
                            option Farming
                            option Selling
            .list_products
                -for(i=0;i<5;i++)
                    a.list_products__item_wrapper(popup-to="character_detail_popup" href="javascript:;")
                        .list_products__item
                            .item_wrapper__top
                                .character__image
                                    img(src="./images/itemproductmetal.png", alt="CHARACTER-METAL")
                                .character__name
                                    h3 GRBE#95203
                                .character__rating
                                    i.fas.fa-star
                                    i.fas.fa-star
                                    i.fas.fa-star
                                    i.fas.fa-star
                                    i.fas.fa-star
                            .item_wrapper__bottom
                                .character__information
                                    .information__item
                                        span Class
                                        span Metal
                                    .information__item
                                        span Genes
                                        span 10%
                                    .information__item
                                        span Status
                                        span Farming
                            .item_wrapper__action
                                button.bt.bt--block.bt--primary Unstake
    // *** CHARACTER DETAIL POPUP *** //
    include ../components/character_detail_your_tree_popup